{
  "name": "transactly",
  "version": "2.0.0",
  "description": "Transactional Key Value Store based on CosmosDB.",
  "author": "PayFunc",
  "license": "MIT",
  "repository": "https://github.com/payfunc/transactly",
  "bugs": {
    "url": "https://github.com/payfunc/transactly/issues"
  },
  "homepage": "https://payfunc.com/open-source/transactly",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "git": {
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!(cryptly|authly|gracely|isoly|servly|cloud-router|cloud-http)/.*)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json",
        "setTimeout": 2000
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "build": "webpack",
    "dev": "NODE_ENV=development npm run build",
    "lint": "eslint '**/*.{ts,tsx}'",
    "fix": "eslint '**/*.{ts,tsx}' --fix",
    "clean": "rimraf dist node_modules coverage",
    "test": "jest --maxWorkers=2",
    "test:watch": "watch jest",
    "transpile": "tsc --project tsconfig.test.json",
    "deploy": "wrangler publish",
    "serve": "wrangler dev --env development",
    "start": "npm run dev && KV_FILE_ROOT='../.kv/' cloudflare-worker-local  ./dist/worker.development.js localhost:3000 7150 ./variables.toml ",
    "start.production": "NODE_ENV=production npm run build && KV_FILE_ROOT='../.kv/' cloudflare-worker-local ./dist/worker.production.js localhost:3000 7150 ./variables.toml "
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^3.10.0",
    "@types/jest": "^27.0.3",
    "@types/node": "^17.0.5",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "babel-core": "^6.26.3",
    "babel-jest": "^27.4.5",
    "cloud-http": "^0.0.26",
    "cloud-router": "^0.0.13",
    "cloudflare-worker-local": "^1.13.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-standardize": "^0.9.1",
    "eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20211221",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27",
    "prettierx": "github:utily/prettierx#utily-20211221",
    "rimraf": "^3.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "ts-jest": "^27.1.2",
    "ts-loader": "^8.0.14",
    "typescript": "^4.3.4",
    "webpack": "^5.16.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "@cfworker/cosmos": "^1.6.11",
    "cryptly": "2.1.0",
    "isoly": "payfunc/isoly#update-node"
  }
}
