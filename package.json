{
	"name": "transactly",
	"version": "0.0.9",
	"description": "Transactional Key Value Store based on CosmosDB.",
	"author": "PayFunc",
	"license": "MIT",
	"repository": "https://github.com/payfunc/transactly",
	"bugs": {
		"url": "https://github.com/payfunc/transactly/issues"
	},
	"homepage": "https://payfunc.com/open-source/transactly",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": "ts-jest"
		},
		"transformIgnorePatterns": [
			"node_modules/(?!(cryptly|authly|gracely|isoly|servly|cloud-router|cloud-http)/.*)"
		],
		"globals": {
			"ts-jest": {
				"tsconfig": "tsconfig.test.json",
				"setTimeout": 2000
			}
		},
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		],
		"preset": "ts-jest",
		"testMatch": null
	},
	"scripts": {
		"build": "webpack",
		"dev": "NODE_ENV=development npm run build",
		"lint": "eslint '**/*.{ts,tsx}'",
		"fix": "eslint '**/*.{ts,tsx}' --fix",
		"clean": "rimraf dist node_modules coverage",
		"test": "jest --maxWorkers=2",
		"test:watch": "watch jest",
		"transpile": "tsc --project tsconfig.test.json",
		"deploy": "wrangler publish",
		"serve": "wrangler dev --env development",
		"start": "npm run dev && KV_FILE_ROOT='../.kv/' cloudflare-worker-local  ./dist/worker.development.js localhost:3000 7150 ./variables.toml ",
		"start.production": "NODE_ENV=production npm run build && KV_FILE_ROOT='../.kv/' cloudflare-worker-local ./dist/worker.production.js localhost:3000 7150 ./variables.toml "
	},
	"devDependencies": {
		"@babel/core": "^7.16.7",
		"@cloudflare/workers-types": "^3.3.0",
		"@cloudflare/wrangler": "^1.19.6",
		"@types/jest": "^27.4.0",
		"@types/node": "^14.17.0",
		"@types/service-worker-mock": "^2.0.1",
		"@typescript-eslint/eslint-plugin": "^5.9.0",
		"@typescript-eslint/parser": "^5.9.0",
		"babel-jest": "^27.4.5",
		"cloud-http": "^0.0.24",
		"cloud-router": "^0.0.13",
		"cloudflare-worker-local": "^1.13.0",
		"dotenv": "^10.0.0",
		"eslint": "^7.32.0",
		"eslint-plugin-prettierx": "github:robinnedergard/eslint-plugin-prettierx#master",
		"eslint-plugin-simple-import-sort": "^7.0.0",
		"isomorphic-fetch": "^3.0.0",
		"jest": "^27.4.5",
		"prettierx": "github:robinnedergard/prettierx#newline-before-clause-sync",
		"rimraf": "^3.0.2",
		"service-worker-mock": "^2.0.5",
		"terser-webpack-plugin": "^5.3.0",
		"ts-jest": "^27.1.2",
		"ts-loader": "^9.2.6",
		"typescript": "^4.5.4",
		"webpack": "^5.65.0",
		"webpack-cli": "^4.9.1"
	},
	"dependencies": {
		"@cfworker/cosmos": "^1.12.0",
		"cryptly": "^0.1.5",
		"isoly": "payfunc/isoly#remove-warnings"
	}
}
